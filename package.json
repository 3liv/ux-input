{
  "name": "ux-input",
  "version": "0.0.0",
  "main": "dist/resources",
  "author": "Pedram Emrouznejad (https://github.com/pemrouz)",
  "license": "pemrouz.mit-license.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanillacomponents/ux-input.git"
  },
  "scripts": {
    "bundle": "sh -c 'echo \"ripple(require(\\'./\\'))\" | browserify - -o dist/client.js",
    "babel": "babel src -d dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "export": "sh -c 'rijs.export'",
    "build": "npm run clean && npm run babel && npm run export && npm run bundle",
    "test": "popper",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-preset-es2015": "*",
    "babelify": "*",
    "popper": "*",
    "browserify": "*",
    "browserenv": "*",
    "tape": "*",
    "utilise": "*",
    "cssscope": "*",
    "utilise.filify": "*",
    "rijs.export": "*"
  }
}